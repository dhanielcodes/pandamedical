{
    "name": "@pandamedical/server",
    "version": "1.0.0",
    "private": true,
    "main": "app/index.js",
    "scripts": {
        "build": "rm -rf dist && babel app/ -d dist --copy-files",
        "generate-docs": "apidoc -i app/docs -o docs/",
        "test": "nyc mocha app/**/*.test.js --require @babel/register --exit",
        "watch:test": "cross-env NODE_ENV=test nodemon --exec \"npm test\"",
        "db:seed": "cross-env NODE_ENV=development babel-node app/config/seeder",
        "prod-server:seed": "cross-env NODE_ENV=production babel-node app/config/seeder",
        "start": "node bin/www",
        "watch:dev": "yarn db:seed && cross-env NODE_ENV=development nodemon --exec babel-node bin/www-dev.js",
        "watch:prod": "yarn db:seed && cross-env NODE_ENV=production nodemon --exec \"npm run prod \"",
        "prod": "yarn run build && yarn start",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "format": "prettier --write \"**/*.+(js|jsx|json|css|md)\""
    },
    "engines": {
        "node": ">=10.15.3"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "africastalking": "^0.5.2",
        "app-root-path": "^3.0.0",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.19.0",
        "cli-table": "^0.3.1",
        "cookie-parser": "~1.4.4",
        "cors": "^2.8.5",
        "crypto-js": "^4.0.0",
        "date-fns": "^2.16.1",
        "debug": "~2.6.9",
        "device-detector-js": "^2.2.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-list-endpoints": "^5.0.0",
        "express-validation": "^3.0.5",
        "firebase-admin": "^9.4.2",
        "geoip-lite": "^1.4.2",
        "hbs": "^4.1.1",
        "helmet": "^3.22.0",
        "http-errors": "~1.6.3",
        "http-status": "^1.4.2",
        "idempotent-babel-polyfill": "^7.4.4",
        "ip-regex": "^4.2.0",
        "jsonwebtoken": "^8.5.1",
        "libphonenumber-js": "^1.9.6",
        "lodash": "^4.17.20",
        "mongodb": "^3.5.5",
        "mongoose": "^5.11.8",
        "mongoose-seed": "^0.6.0",
        "morgan": "~1.9.1",
        "node-sass-middleware": "0.11.0",
        "nodemailer": "^6.4.16",
        "nodemailer-express-handlebars": "^4.0.0",
        "twilio": "^3.54.0",
        "validator": "^13.0.0",
        "winston": "^3.3.3"
    },
    "devDependencies": {
        "@babel/cli": "^7.10.5",
        "@babel/core": "^7.11.4",
        "@babel/node": "^7.10.5",
        "@babel/polyfill": "^7.10.4",
        "@babel/preset-env": "^7.11.0",
        "@babel/register": "^7.10.5",
        "apidoc": "^0.25.0",
        "babel-jest": "^26.3.0",
        "babel-plugin-module-resolver": "^4.0.0",
        "cross-env": "^7.0.2",
        "eslint": "^7.7.0",
        "eslint-config-airbnb-base": "^14.2.0",
        "eslint-config-node": "^4.1.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.1.4",
        "expect": "^26.4.2",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.13",
        "mocha": "^7.1.1",
        "nodemon": "^2.0.3",
        "nyc": "^15.1.0",
        "prettier": "^2.1.0",
        "pretty-quick": "^3.0.0",
        "supertest": "^4.0.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*.js": [
            "pretty-quick --staged",
            "git add"
        ]
    }
}